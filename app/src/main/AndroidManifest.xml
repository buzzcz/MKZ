<?xml version="1.0" encoding="utf-8"?>
<manifest package="buzzcz.studentuvpomocnik"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTimetableActivity"
            android:label="@string/add_timetable"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.MainActivity"/>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.MainActivity"/>
        </activity>
        <activity
            android:name=".SylabusActivity"
            android:label="@string/sylabus"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.MainActivity"/>
        </activity>
        <activity
            android:name=".TasksActivity"
            android:label="@string/tasks"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.MainActivity"/>
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/add_task"
            android:parentActivityName=".TasksActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.TasksActivity"/>
        </activity>
        <activity
            android:name=".TermsActivity"
            android:label="@string/terms"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.MainActivity"/>
        </activity>
        <activity
            android:name=".AddTermActivity"
            android:label="@string/add_term"
            android:parentActivityName=".TermsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.TermsActivity"/>
        </activity>
        <activity
            android:name=".AbsencesActivity"
            android:label="@string/absences"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="buzzcz.studentuvpomocnik.MainActivity"/>
        </activity>
    </application>

</manifest>