<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".AddTimetableActivity"
                tools:showIn="@layout/activity_add_timetable">

    <Spinner
        android:id="@+id/schoolSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/personalNumberEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/personalNumberEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/add_timetable_hint"
        android:text="a13b0347p"
        android:layout_above="@+id/addTimetableButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/addTimetableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/add_timetable_button"
        android:onClick="addTimetableButtonAction"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
